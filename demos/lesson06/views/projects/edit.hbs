<h1>
  {{title}}
</h1>
{{! POST is the most common way for sending data to the server }}
<form method="POST">
  {{! Input names have to match the attributes in our model }}
  <fieldset>
    <label for="name" class="col-2">Name:</label>
    <input name="name" id="name" required value="{{project.name}}" />
  </fieldset>
  <fieldset>
    <label for="dueDate" class="col-2">Due date:</label>
    <input name="dueDate" id="dueDate" value="{{project.dueDate}}" />
  </fieldset>
  <fieldset>
    <label for="course" class="col-2">Course:</label>
    {{!-- <input name="course" id="course" /> --}}
    <select name="course" id="course">
      {{!-- foreach loop to render each option --}}
      {{#each courses}}
        {{!-- <option>this.name</option> --}}
        {{createOption this.name ../project.course}}
      {{/each}}
    </select>
  </fieldset>
  {{!-- Add fieldsets for Status --}}
  <fieldset>
    <label for="status" class="col-2">
      Status:
    </label>
    <select name="status" id="status">
      {{!-- Hardcode values as these won't change --}}
      {{!-- <option>TO DO</option>
      <option>IN PROGRESS</option>
      <option>DONE</option> --}}

      {{!-- Use helper instead --}}
      {{createOption 'TO DO' ../project.status}}
      {{createOption 'IN PROGRESS' ../project.status}}
      {{createOption 'DONE' ../project.status}}
    </select>
  </fieldset>
  {{!-- Add a button to trigger the POST request --}}
  <button class="offset-3 btn btn-primary">Save</button>
</form>