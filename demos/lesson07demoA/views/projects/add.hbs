<h1>
  {{title}}
</h1>
{{! TODO Add fields to be filled in and a button }}
<form method="POST">
  {{! FIELDS }}
  <fieldset>
      <label for="name" class="col-2">Name:</label>
      <input name="name" id="name" required />
  </fieldset>
  <fieldset>
      <label for="dueDate" class="col-2">Due Date:</label>
      <input name="dueDate" id="dueDate" required type="date" />
  </fieldset>
  <fieldset>
      <label for="course" class="col-2">Course:</label>
      {{!-- <input name="course" id="course" required /> --}}
      <select name="course" id="course">
      {{#each courses}}
          <option>{{this.name}}</option>
      {{/each}}
      </select>
  </fieldset>
  {{! A BUTTON }}
  <button class="offset-3 btn btn-primary">Save</button>
</form>