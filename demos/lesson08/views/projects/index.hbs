<h1>{{title}}</h1>
{{!-- Add links to CRUD operations --}}
{{#if user}}
  <a href="/projects/add" class="btn btn-primary">Add a new project</a>
{{/if}}
{{!-- Add a table to show data --}}
{{!-- To Show data --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Due Date</th>
    <th>Course</th>
    <th>Status</th>
    {{#if user}}
      <th>Actions</th>
    {{/if}}
  </thead>
  {{!-- dataset is a list of projects --}}
  {{#each dataset}}
  <tr>
    <td>{{this.name}}</td>
    <td>{{toShortDate this.dueDate}}</td> 
    {{!-- similar to a JS method call toShortDate(this.dueDate) --}}
    <td>{{this.course}}</td>
    <td>{{this.status}}</td>
    {{#if user}}
      <td>
        {{!-- Add edit and delete buttons --}}
        <a href="/projects/edit/{{this._id}}" class="btn btn-success">Edit</a>
        <a href="/projects/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDeletion();">Delete</a>
      </td>
    {{/if}}
  </tr>
  {{/each}}
</table>