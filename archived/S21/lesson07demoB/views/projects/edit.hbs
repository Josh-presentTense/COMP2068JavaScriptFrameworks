<h1>{{title}}</h1>
{{!-- TODO: ADD FIELDS TO ENTER DATA AND A SAVE BUTTON --}}
{{!-- Create a form to send information back to the server via POST --}}
<form method="POST">
    <fieldset>
        <label for="name" class="col-2">Name:</label>
        <input name="name" id="name" value="{{project.name}}"/>
    </fieldset>
    <fieldset>
        <label for="dueDate" class="col-2">Due Date:</label>
        <input name="dueDate" id="dueDate" type="date" value="{{toShortDate project.dueDate}}"/>
    </fieldset>
    <fieldset>
        <label for="course" class="col-2">Course:</label>
        <select name="course" id="course">
        {{#each courses}}
            {{!-- <option>{{this.name</option> --}}
            {{createOption this.name ../project.course}}
        {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label for="status" class="col-2">Status:</label>
        <select name="status" id="status">
            {{!-- hardcode the options --}}
            {{!-- <option>TO DO</option>
            <option>IN PROGRESS</option>
            <option>DONE</option> --}}
            {{createOption 'TO DO' ../project.status}}
            {{createOption 'IN PROGRESS' ../project.status}}
            {{createOption 'DONE' ../project.status}}
        </select>
    </fieldset>
    <button class="offset-3 btn btn-primary">Save</button>
</form>